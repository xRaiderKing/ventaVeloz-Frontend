{
  "expo": {
    "name": "VentaVeloz",
    "slug": "ventaveloz",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/iconoaplicacionmovile.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/iconoaplicacionmovile.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "VentaVeloz necesita acceso a tu cámara para tomar fotos de productos",
        "NSPhotoLibraryUsageDescription": "VentaVeloz necesita acceso a tu galería para seleccionar fotos de productos"
      }
    },
    "android": {
      "package": "com.ventaveloz.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/iconoaplicacionmovile.png",
        "backgroundColor": "#2563eb"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "softwareKeyboardLayoutMode": "pan"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "VentaVeloz necesita acceso a tu galería para seleccionar fotos de productos",
          "cameraPermission": "VentaVeloz necesita acceso a tu cámara para tomar fotos de productos"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "11a85879-598b-4ca4-b486-39e6beb4dcaa"
      }
    }
  }
}
